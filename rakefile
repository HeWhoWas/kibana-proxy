require 'resque'
require 'resque/tasks'
require 'resque/errors'
require 'resque-scheduler'
require 'resque/scheduler/tasks'
require_relative 'config'
require_relative 'lib/close_index_job'

Resque.redis = Redis.new(:host => REDIS_SERVER, :port => REDIS_PORT)

desc 'Run the resque-web server'
task :web do
  require 'resque/server'
  Resque::Server.run! :port=>7003
end
